datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  assignedTo String?
  createdAt  DateTime       @default(now())
  id         String         @id @default(cuid())
  project    Project?       @relation(fields: [projectId], references: [id])
  projectId  String?
  startDate  DateTime?
  status     EnumTaskStatus
  title      String
  updatedAt  DateTime       @updatedAt
}

model Project {
  createdAt    DateTime  @default(now())
  description  String?
  dueDate      DateTime?
  id           String    @id @default(cuid())
  name         String
  projectOwner Human?    @relation(fields: [ID], references: [id])
  ID           String?   @unique
  startDate    DateTime?
  tasks        Task[]
  updatedAt    DateTime  @updatedAt
}

model Human {
  createdAt DateTime @default(now())
  email     String   @unique
  id        String   @id @default(cuid())
  name      String
  password  String
  projects  Project?
  updatedAt DateTime @updatedAt
}

enum EnumTaskStatus {
  New
  Pending
  Ongoing
  Done
}
